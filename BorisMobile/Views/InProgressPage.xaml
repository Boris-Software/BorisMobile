<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorisMobile.Views.InProgressPage"
             xmlns:controls="clr-namespace:BorisMobile.Controls"
             Title="InProgressPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnDefinitions="0.5*,3*,0.5*,0.2*" 
                  RowDefinitions="50" 
                  Padding="0,15,0,30">
                <Label Grid.Column="0" 
                       Padding="10"  
                       FontFamily="FaSolid" 
                       TextColor="Black" 
                       Text="{StaticResource backarrow}" 
                       VerticalTextAlignment="Center" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BackButtonClickCommand}"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label Grid.Column="1"
                       HorizontalOptions="CenterAndExpand" 
                       VerticalOptions="CenterAndExpand"
                       FontAttributes="Bold" 
                       Text="In Progress" 
                       TextColor="Black" 
                       FontSize="20"></Label>
                <Grid Grid.Column="2">
                    <Image Source="cloud.png" 
                           WidthRequest="20" 
                           HeightRequest="20"></Image>
                    <Image Source="syncavailable.png" 
                           WidthRequest="10" 
                           HeightRequest="10" 
                           Margin="10,10,0,0"></Image>
                </Grid>
                <Label VerticalTextAlignment="Center" 
                       Grid.Column="3" 
                       FontFamily="FaSolid" 
                       TextColor="Black" 
                       Text="{StaticResource user}" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding MoreIconClickedCommand}"/>
                    </Label.GestureRecognizers>
                </Label>

            </Grid>
            <StackLayout HorizontalOptions="FillAndExpand" 
                         BackgroundColor="#EFFAFF"
                         Padding="10" >
                <Label Text="Firestopping Customer JJL"  TextColor="Black"
                       Margin="0,0,0,2"/>
                <Label Text="06" TextColor="Black"
                       Margin="0,0,0,10"/>
            </StackLayout>
            <StackLayout Margin="20">
                <Border StrokeShape="RoundRectangle 15"
                    Stroke="white"
                        BackgroundColor="#F4F6F7">
                    <Grid ColumnDefinitions="4*,0.5*"
                          RowDefinitions="50" >
                        <controls:NoBorderSearchBar  Grid.Column="0" 
                                                     TextColor="Black"
                                                     Placeholder="Search" 
                                                     PlaceholderColor="Gray"/>
                        <StackLayout Grid.Column="1"
                                     Padding="5"
                                     VerticalOptions="Center">
                            <Image Source="dictation.png"/>
                        </StackLayout>
                    </Grid>
                </Border>
            </StackLayout>
            <StackLayout Margin="20" >
                <Grid ColumnDefinitions="4*,0.7*">
                    <StackLayout Grid.Column="0">
                        <Label Text="FireStopping LD" TextColor="Black"/>
                        <Label Text="Contract Work" TextColor="Black"/>
                    </StackLayout>
                    <Image Grid.Column="1"
                           Source="trash.png"
                           VerticalOptions="Center"/>
                </Grid>
                <Grid ColumnDefinitions="4*,0.7*">
                    <Label Grid.Column="0" 
                           Text="10/01/2024"
                           TextColor="Gray"/>
                    <Label Grid.Column="1"
                           VerticalOptions="Center"
                           Text="2.34PM"
                           TextColor="Gray"/>
                </Grid>
            </StackLayout>
            <StackLayout Margin="20" >
                <Grid ColumnDefinitions="4*,0.7*">
                    <StackLayout Grid.Column="0">
                        <Label Text="Accept Method" TextColor="Black"/>
                        <Label Text="Statement" TextColor="Black"/>
                    </StackLayout>
                    <Image Grid.Column="1"
                           Source="trash.png"
                           VerticalOptions="Center"/>
                </Grid>
                <Grid ColumnDefinitions="4*,0.7*">
                    <Label Grid.Column="0" 
                           Text="10/01/2024"
                           TextColor="Gray"/>
                    <Label Grid.Column="1"
                           VerticalOptions="Center"
                           Text="2.34PM"
                           TextColor="Gray"/>
                </Grid>
            </StackLayout>
            <StackLayout Margin="20" >
                <Grid ColumnDefinitions="4*,0.7*">
                    <StackLayout Grid.Column="0">
                        <Label Text="FireStopping LD" TextColor="Black"/>
                        <Label Text="Contract Work" TextColor="Black"/>
                    </StackLayout>
                    <Image Grid.Column="1"
                           Source="trash.png"
                           VerticalOptions="Center"/>
                </Grid>
                <Grid ColumnDefinitions="4*,0.7*">
                    <Label Grid.Column="0" 
                           Text="10/01/2024"
                           TextColor="Gray"/>
                    <Label Grid.Column="1"
                           VerticalOptions="Center"
                           Text="2.34PM"
                           TextColor="Gray"/>
                </Grid>
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>