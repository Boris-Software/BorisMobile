<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorisMobile.Views.CreateNewFormPage"
             Title="CreateNewFormPage"
             x:Name="createForm"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnDefinitions="0.5*,3*,0.5*,0.2*" 
                  RowDefinitions="50" 
                  Padding="0,15,0,30">
                <Label Grid.Column="0" 
               Padding="10"  
               FontFamily="FaSolid" 
               TextColor="Black" 
               Text="{StaticResource backarrow}" 
               VerticalTextAlignment="Center" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BackButtonClickCommand}"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label Grid.Column="1"
               HorizontalOptions="CenterAndExpand" 
               VerticalOptions="CenterAndExpand"
               FontAttributes="Bold" 
               Text="Create a new form" 
               TextColor="Black" 
               FontSize="20"></Label>
                <Grid Grid.Column="2">
                    <Image Source="cloud.png" 
                   WidthRequest="20" 
                   HeightRequest="20"></Image>
                    <Image Source="syncavailable.png" 
                   WidthRequest="10" 
                   HeightRequest="10" 
                   Margin="10,10,0,0"></Image>
                </Grid>
                <Label VerticalTextAlignment="Center" 
               Grid.Column="3" 
               FontFamily="FaSolid" 
               TextColor="Black" 
               Text="{StaticResource user}" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding MoreIconClickedCommand}"/>
                    </Label.GestureRecognizers>
                </Label>

            </Grid>

            <StackLayout x:Name="bodyStack" IsVisible="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                <StackLayout HorizontalOptions="FillAndExpand" 
                         BackgroundColor="#EFFAFF"
                         Padding="10" >
                    <Label Text="{Binding WorkOrder.customer.Desc}" TextColor="Black"
                       Margin="0,0,0,2"/>
                    <Label Text="{Binding WorkOrder.workOrder.JobNo}" TextColor="Black"
                       Margin="0,0,0,10"/>
                </StackLayout>

                <CollectionView ItemsSource="{Binding TemplateDocuments}"  Margin="20,50,20,0">
                    <CollectionView.Triggers>
                        <DataTrigger TargetType="CollectionView"
                        Binding="{Binding TemplateDocuments.Count}" Value="0">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </CollectionView.Triggers>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,0,0,4">
                            <Border Margin="5"
                                StrokeShape="RoundRectangle 10" StrokeThickness="1"
                                Stroke="#C1ECF8" HeightRequest="60">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.FormClickCommand, Source={x:Reference createForm}}" CommandParameter="{Binding .}"></TapGestureRecognizer>
                                </Border.GestureRecognizers>
                                <StackLayout BackgroundColor="#C1ECF8" >
                                    <Label Text="{Binding TemplateName}" TextColor="Black"
                                       HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center"/>
                                </StackLayout>
                            </Border>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="No results found" IsVisible="False" TextColor="Black" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Label.Triggers>
                        <DataTrigger TargetType="Label"
                            Binding="{Binding TemplateDocuments.Count}" Value="0">
                            <Setter Property="IsVisible" Value="True" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
            </StackLayout>

            <ActivityIndicator 
                IsVisible="{Binding IsLoading}" 
                IsRunning="{Binding IsLoading}" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Color="#00B1E3" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>