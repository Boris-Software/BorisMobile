<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorisMobile.Views.AboutPage"
             Title="AboutPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Padding="10" Margin="20,30,0,0"  FontFamily="FaSolid" TextColor="Black" Text="{StaticResource backarrow}" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackButtonClickCommand}"></TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>

            <StackLayout Margin="0,15,0,0" Padding="15" HorizontalOptions="FillAndExpand" HeightRequest="150" BackgroundColor="#EFFAFF">
                <Border  Grid.Column="0"
                     HeightRequest="75"
                     WidthRequest="75"
                     Stroke="#CAD3D7"
                     StrokeShape="RoundRectangle 35"
                     Background="white" HorizontalOptions="Start">
                    <Image Source="company.jpg" Aspect="AspectFill"></Image>
                </Border>

                <Label Text="{Binding CompanyDetails.Desc}" TextColor="Black" FontAttributes="Bold" FontSize="15" Margin="0,5,0,0"></Label>
            </StackLayout>

            <StackLayout Margin="0,15,0,0" Padding="15" HorizontalOptions="FillAndExpand"  BackgroundColor="#EFFAFF">
                <Label Text="User Name" FontAttributes="Bold" TextColor="Black" FontSize="15"></Label>
                <Label Text="{Binding UserName}" TextColor="Black" FontSize="12" Margin="0,5,0,0"></Label>

                <BoxView HeightRequest="1" Margin="0,15,0,0" BackgroundColor="#E3E9EA"></BoxView>

                <Label Text="Website" FontAttributes="Bold" TextColor="Black" FontSize="15" Margin="0,10,0,0"></Label>
                <Label Text="{Binding CompanyDetails.Web}" TextColor="Black" FontSize="12" Margin="0,5,0,0"></Label>

                <BoxView HeightRequest="1" Margin="0,15,0,0" BackgroundColor="#E3E9EA"></BoxView>

                <Label Text="Notes" FontAttributes="Bold" TextColor="Black" FontSize="15" Margin="0,10,0,0"></Label>
                <Label Text="Abe is a bespoke digital data capturing app for anyone who has to work on site and collate data." TextColor="Black" FontSize="12" Margin="0,5,0,0"></Label>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LogoutButtonClickCommand}"></TapGestureRecognizer>
                </StackLayout.GestureRecognizers>
                <Label Padding="10" Margin="20,30,0,0" FontSize="15"  FontFamily="FaSolid" TextColor="Black" Text="{StaticResource logout}" />

                <Label Text="Logout" FontSize="15" VerticalOptions="Center" Margin="10,25,0,0" TextColor="Black"></Label>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>