<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorisMobile.Controls.MultiChoiceSelector"
             Title="MultiChoiceSelector"
             x:Name="this">
    <StackLayout Spacing="10">
        <Label x:Name="TitleLabel"
               Text="{Binding Title}"
               TextColor="Black"
               FontAttributes="Bold" />

        <CollectionView x:Name="ChoicesCollection"
                       ItemsSource ="{Binding Choices, Source={x:Reference this}}"
                       SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal"
                                 ItemSpacing="8"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15,10"
                           CornerRadius="25"
                           HeightRequest="50" WidthRequest="{Binding Width}"
                           HasShadow="False"
                           BackgroundColor="{Binding BackgroundColor}"
                           BorderColor="LightGray">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnChoiceTapped" />
                        </Frame.GestureRecognizers>

                        <StackLayout>
                            <Label Text="{Binding Desc}"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>