<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorisMobile.Controls.ComboBox"
             xmlns:controls="clr-namespace:BorisMobile.Controls"
             x:Name="this">
    <StackLayout Margin="0,15,0,0">
        <Label x:Name="titleLabel" Text="{Binding Title, Source={x:Reference this}}" TextColor="Black"/>
        <Border Margin="0,10,0,0"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand"
                Stroke="#E3E5E5"
                StrokeShape="RoundRectangle 8"
                Background="White">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnControlTapped"></TapGestureRecognizer>
            </Border.GestureRecognizers>
            <Grid ColumnDefinitions="0.9*,0.1*">
                <controls:NoBorderPicker x:Name="picker" ItemDisplayBinding="{Binding Desc}" Grid.Column="0" TextColor="Black" ItemsSource="{Binding ItemsSource, Source={x:Reference this}}" SelectedItem="{Binding SelectedItem, Source={x:Reference this}}" SelectedIndexChanged="ThisPickerSelectedIndexChanged"/>
                <Label Grid.Column="1" Margin="10,0,0,0" FontFamily="FaSolid" TextColor="Black" Text="{StaticResource chevrondown}" VerticalTextAlignment="Center"/>

            </Grid>
        </Border>
    </StackLayout>
</ContentView>