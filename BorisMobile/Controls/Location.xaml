<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorisMobile.Controls.Location"
             xmlns:controls="clr-namespace:BorisMobile.Controls"
             x:Name="this">
    <StackLayout Margin="0,15,0,0">
        <Label x:Name="titleLabel" Text="{Binding Title, Source={x:Reference this}}" TextColor="Black"/>
        <Border Margin="0,10,0,0"
            HeightRequest="50"
            HorizontalOptions="FillAndExpand"
            Stroke="#E3E5E5"
            StrokeShape="RoundRectangle 8"
            Background="White">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnControlTapped"></TapGestureRecognizer>
            </Border.GestureRecognizers>
            <Grid ColumnDefinitions="0.9*,0.1*">
                <controls:NoBorderEntry x:Name="entry" Grid.Column="0" TextColor="Black" />
                <Label Grid.Column="1" Margin="10,0,0,0" FontFamily="FaSolid" TextColor="Black" Text="{StaticResource location}" VerticalTextAlignment="Center"/>

            </Grid>
        </Border>
    </StackLayout>
</ContentView>